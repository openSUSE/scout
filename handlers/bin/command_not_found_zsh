function preexec() {
    local -a commandarray
    commandarray=("${(z)1}")
    command="${(Q)commandarray[1]}"
}

function precmd() {
    (($? == 127)) && [ -n "$command" ] && [ -x /usr/bin/python ] && [ -x /usr/bin/command-not-found ] && {
        whence -- "$command" >& /dev/null ||
            /usr/bin/python /usr/bin/command-not-found "$command" __REPO__
        unset command
    }
}
